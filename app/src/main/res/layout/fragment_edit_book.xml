<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:tag="tag">

    <TextView
        android:id="@+id/new_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Edit Book"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/cancel_book_button"
        android:layout_width="157dp"
        android:layout_height="40dp"
        android:layout_gravity="center|bottom"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="#AFB7B6"
        android:text="cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/add_book_button2"
        app:layout_constraintHorizontal_bias="0.307"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/add_book_button2"
        android:layout_width="157dp"
        android:layout_height="40dp"
        android:layout_gravity="center|bottom"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="#a3d977"
        android:text="Save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/book_author_editText"
        android:layout_width="357dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:baselineAligned="false"
        android:ems="10"
        android:hint="Book Author"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/book_description_editText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.518"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/book_title_editText"
        android:layout_width="356dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:autofillHints=""
        android:baselineAligned="false"
        android:ems="10"
        android:hint="BookTitle"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/book_author_editText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.527"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/book_isbn_editText"
        android:layout_width="189dp"
        android:layout_height="49dp"

        android:layout_marginBottom="84dp"
        android:hint="ISBN"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/cancel_book_button"
        app:layout_constraintEnd_toStartOf="@+id/scan_button"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/scan_button"
        android:layout_width="134dp"
        android:layout_height="52dp"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginBottom="84dp"
        android:text="Scan"
        app:layout_constraintBottom_toTopOf="@+id/add_book_button2"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/book_description_editText"
        android:layout_width="363dp"
        android:layout_height="58dp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:hint="Description"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/book_isbn_editText"
        app:layout_constraintEnd_toEndOf="parent"
        android:maxLength="120"
        app:layout_constraintStart_toStartOf="parent" />


    <Spinner
        android:id="@+id/spinner"
        android:layout_width="157dp"
        android:layout_height="65dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="8dp"
        android:entries="@array/status_array"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/book_isbn_editText" />

    <ImageView
        android:id="@+id/editImageButton"
        android:layout_width="148dp"
        android:layout_height="148dp"
        android:layout_marginTop="82dp"
        android:layout_marginBottom="61dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintBottom_toTopOf="@+id/book_title_editText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/new_textView" />

    <Button
        android:id="@+id/deletePhotoButton"
        android:layout_width="90dp"
        android:layout_height="41dp"
        android:layout_marginEnd="16dp"
        android:text="Delete Photo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editImageButton" />

</androidx.constraintlayout.widget.ConstraintLayout>