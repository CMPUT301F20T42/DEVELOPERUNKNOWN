<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#362A3068">

    <ImageButton
        android:id="@+id/editImageButton"
        android:layout_width="183dp"
        android:layout_height="183dp"
        android:layout_marginTop="16dp"
        android:clickable="false"
        android:src="@drawable/defaultphoto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchUnameEdit" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="100dp"
        android:layout_height="38dp"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="10dp"
        android:text="username:"
        android:textColor="#090909"
        android:textSize="15sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/userName"
        app:layout_constraintEnd_toStartOf="@+id/userName"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="100dp"
        android:layout_height="38dp"
        android:layout_marginStart="55dp"
        android:text="FirstName:"
        android:textColor="#090909"
        android:textSize="15sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/userFirstName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="100dp"
        android:layout_height="38dp"
        android:layout_marginStart="55dp"
        android:text="LastName:"
        android:textColor="#090909"
        android:textSize="15sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/userLastName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/userName"
        android:layout_width="100dp"
        android:layout_height="38dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="32dp"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/editImageButton" />

    <TextView
        android:id="@+id/userEmail"
        android:layout_width="112dp"
        android:layout_height="46dp"
        android:textSize="10sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/userName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/userName" />

    <TextView
        android:id="@+id/userFirstName"
        android:layout_width="100dp"
        android:layout_height="38dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="108dp"
        android:textColor="#090909"
        android:textSize="15sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView10"
        app:layout_constraintTop_toBottomOf="@+id/userName" />

    <TextView
        android:id="@+id/userLastName"
        android:layout_width="100dp"
        android:layout_height="38dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="15dp"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView11"
        app:layout_constraintTop_toBottomOf="@+id/userFirstName" />

    <Button
        android:id="@+id/editInfo"
        android:layout_width="84dp"
        android:layout_height="41dp"

        android:layout_marginTop="30dp"
        android:background="#E4D4D4"
        android:text="Edit"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/confirmEditProfile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editContactPhone" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="100dp"
        android:layout_height="38dp"
        android:layout_marginStart="55dp"
        android:text="Contact email:"
        android:textColor="#090909"
        android:textSize="15sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/editContactEmail"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="100dp"
        android:layout_height="38dp"
        android:layout_marginStart="55dp"
        android:text="Contact phone:"

        android:textColor="#090909"
        android:textSize="14sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/editContactPhone"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editContactEmail"
        android:layout_width="200dp"
        android:layout_height="38dp"
        android:layout_marginTop="15dp"

        android:ems="10"
        android:inputType="textEmailAddress"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.352"
        app:layout_constraintStart_toEndOf="@+id/textView13"
        app:layout_constraintTop_toBottomOf="@+id/userLastName" />

    <EditText
        android:id="@+id/editContactPhone"
        android:layout_width="200dp"
        android:layout_height="38dp"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:inputType="phone"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.352"
        app:layout_constraintStart_toEndOf="@+id/textView14"
        app:layout_constraintTop_toBottomOf="@+id/editContactEmail" />

    <Button
        android:id="@+id/confirmEditProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="105dp"
        android:layout_marginBottom="120dp"
        android:text="Confirm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editContactPhone" />

    <EditText
        android:id="@+id/searchUnameEdit"
        android:layout_width="0dp"
        android:layout_height="37dp"
        android:background="#2C05F394"
        android:ems="10"
        android:hint="Enter the user you want to know"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toStartOf="@+id/searchUserButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/searchUserButton"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:drawableBottom="@drawable/ic_baseline_search_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/searchUnameEdit"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
