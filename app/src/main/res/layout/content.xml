<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="520dp">

    <TextView
        android:id="@+id/book_title"
        android:layout_width="251dp"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="Title"
        android:textColor="#818181"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <TextView
        android:id="@+id/book_status"
        android:layout_width="162dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:padding="20dp"
        android:text="Status"
        android:textColor="#818181"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <TextView
        android:id="@+id/book_description"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="20dp"
        android:text="Description"
        android:textColor="#AFB7B6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/book_author2" />

    <TextView
        android:id="@+id/book_author2"
        android:layout_width="251dp"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:text="Author"
        android:textColor="#AFB7B6"
        app:layout_constraintBaseline_toBaselineOf="@+id/book_owner"
        app:layout_constraintBottom_toTopOf="@+id/book_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/book_title" />

    <TextView
        android:id="@+id/book_borrower"
        android:layout_width="167dp"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:textStyle="italic"
        android:textColor="#AFB7B6"
        app:layout_constraintStart_toEndOf="@+id/text_view"
        app:layout_constraintTop_toBottomOf="@+id/book_description" />

    <TextView
        android:id="@+id/text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingBottom="20dp"
        android:text="Borrower:  "
        android:textStyle="italic"
        android:textColor="#AFB7B6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/book_description" />

    <TextView
        android:id="@+id/book_owner"
        android:layout_width="146dp"
        android:layout_height="30dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:textColor="#AFB7B6"
        app:layout_constraintStart_toEndOf="@+id/book_author2"
        app:layout_constraintTop_toBottomOf="@+id/book_status" />
</androidx.constraintlayout.widget.ConstraintLayout>