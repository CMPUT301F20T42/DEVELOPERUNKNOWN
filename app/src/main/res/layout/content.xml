<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="550dp">

    <TextView
        android:id="@+id/book_title"
        android:layout_width="251dp"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="Title"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <TextView
        android:id="@+id/book_status"
        android:layout_width="162dp"
        android:layout_height="66dp"
        android:padding="20dp"
        android:text="Status"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <TextView
        android:id="@+id/book_description"
        android:layout_width="219dp"
        android:layout_height="56dp"
        android:layout_marginEnd="2dp"
        android:padding="20dp"
        android:text="Description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/book_owner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/book_author2" />

    <TextView
        android:id="@+id/book_author2"
        android:layout_width="209dp"
        android:layout_height="60dp"
        android:padding="20dp"
        android:text="Author"
        app:layout_constraintBottom_toTopOf="@+id/book_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/book_title" />

    <TextView
        android:id="@+id/book_borrower"
        android:layout_width="204dp"
        android:layout_height="60dp"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/book_status" />

    <TextView
        android:id="@+id/book_owner"
        android:layout_width="188dp"
        android:layout_height="55dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/book_description"
        app:layout_constraintTop_toBottomOf="@+id/book_borrower" />
</androidx.constraintlayout.widget.ConstraintLayout>